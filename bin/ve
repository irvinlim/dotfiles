#!/bin/zsh

#
# Usage:
#
# Create a new virtual environment using `base`:
#   $ ve
#
# Create a new virtual environment using a custom config:
#   $ ve python2.7
#

cmd=(df_install setup_venv)

if [[ -n "$1" ]]
then
  cmd+="from"
  cmd+="$1"
else
  cmd+="from_base"
fi

PYTHONPATH="$DOTFILES_ROOT" $cmd
