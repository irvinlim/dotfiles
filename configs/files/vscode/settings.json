{
  // General editor settings
  "breadcrumbs.enabled": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [120],
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "window.zoomLevel": 0,
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",
  "files.associations": {
    ".env-example": "dotenv",
    "*.conf": "NGINX"
  },
  "files.exclude": {
    "**/.idea": true,
    "**/.vscode": true,
    "**/Icon?": true,
    "**/*.pyc": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/.cache": true,
    "**/.pytest_cache": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/*.o": true
  },
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.editor.untitled.hint": "hidden",
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.emptyWindow": true,
  // Git
  "diffEditor.ignoreTrimWhitespace": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.defaultCloneDirectory": "~/Projects",
  "git.enableSmartCommit": true,
  "git.ignoreLimitWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.enabled": false,
  // Integrated Terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "'Meslo LG M for Powerline'",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  // Languages: C
  "C_Cpp.clang_format_fallbackStyle": "WebKit",
  "C_Cpp.clang_format_path": "/usr/local/bin/clang-format",
  "C_Cpp.intelliSenseEngine": "default",
  // Languages: HTML/CSS/JS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.bracketSameLine": true,
  "prettier.printWidth": 80,
  "prettier.proseWrap": "preserve",
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "svelte.enable-ts-plugin": true,
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  // Languages: Docker
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  // Languages: Go
  "go.formatTool": "gofmt",
  "go.inferGopath": true,
  "go.toolsManagement.autoUpdate": true,
  // Languages: LaTeX
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "--shell-escape", // added arg to default
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "--shell-escape", // added arg to default
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"]
    }
  ],
  // Languages: Markdown
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdownlint.config": {
    "MD013": false,
    "MD030": false
  },
  "markdown-pdf.highlightStyle": "github.css",
  "markdown-pdf.breaks": true,
  // Languages: PHP
  "composer.executablePath": "/usr/local/bin/composer",
  // Languages: Prolog
  "prolog.executablePath": "/usr/local/bin/swipl",
  "prolog.linter.run": "onSave",
  // Languages: Python
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.defaultInterpreterPath": "~/.virtualenvs/python3.7/bin/python",
  "python.formatting.provider": "black",
  "python.formatting.yapfArgs": [
    "--style",
    "/Users/irvin/.config/yapf/style.cfg"
  ],
  "python.formatting.yapfPath": "~/.virtualenvs/python3/bin/yapf",
  "python.languageServer": "Default",
  "python.linting.ignorePatterns": [
    ".vscode/*.py",
    ".venv/*.py",
    "**/site-packages/**/*.py"
  ],
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  // Emmet
  "emmet.includeLanguages": {
    "blade": "html",
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "emmet.showAbbreviationSuggestions": false,
  "emmet.showExpandedAbbreviation": "always", // required to work with "emmet.includeLanguages"
  "emmet.triggerExpansionOnTab": true,
  // SpellRight
  "spellright.language": ["en_GB", "en"],
  "spellright.groupDictionaries": false,
  "spellright.documentTypes": ["markdown", "latex"],
  // Project Manager
  "projectManager.vscode.baseFolders": ["~/Projects"],
  // Licenser
  "licenser.author": "Irvin Lim",
  "licenser.license": "MIT",
  "licenser.useSingleLineStyle": false,
  "licenser.disableAutoHeaderInsertion": true,
  // Kubernetes
  "[jsonnet]": {
    "editor.defaultFormatter": "Sebbia.jsonnetng"
  },
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "enabled",
    "vscode-kubernetes.helm-path.mac": "/Users/irvin.lim/.vs-kubernetes/tools/helm/darwin-amd64/helm",
    "vscode-kubernetes.kubectl-path.mac": "/Users/irvin.lim/.vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.minikube-path.mac": "/Users/irvin.lim/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
  },
  // Themes
  "workbench.iconTheme": "file-icons",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "text.html.markdown.journal.task.open.bullet",
        "settings": {
          "foreground": "#FFFF00"
        }
      },
      {
        "scope": "text.html.markdown.journal.task.open.marker",
        "settings": {
          "foreground": "#FFFF00"
        }
      },
      {
        "scope": "text.html.markdown.journal.task.open.keyword",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "text.html.markdown.journal.task.open.text",
        "settings": {}
      },
      {
        "scope": "text.html.markdown.journal.task.completed.keyword",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "text.html.markdown.journal.task.completed.marker",
        "settings": {
          "foreground": "#AAAAAA"
        }
      },
      {
        "scope": "text.html.markdown.journal.task.completed.text",
        "settings": {
          "foreground": "#AAAAAA"
        }
      },
      {
        "scope": "text.html.markdown.journal.task.completed.bullet",
        "settings": {
          "foreground": "#FFFF00"
        }
      },
      {
        "scope": "text.html.markdown.journal.memo.keyword",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "text.html.markdown.journal.memo.bullet",
        "settings": {
          "foreground": "#FFFF00"
        }
      },
      {
        "scope": "text.html.markdown.journal.scope",
        "settings": {
          "foreground": "#FFFF00"
        }
      },
      {
        "scope": "text.html.markdown.journal.link.keyword",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "text.html.markdown.journal.link.bullet",
        "settings": {
          "foreground": "#FFFF00"
        }
      }
    ]
  }
  // Settings below this line should be moved to their correct locations.
}
